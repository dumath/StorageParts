<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StorageParts.Styles">

    <ImageBrush x:Key="BackgroundBase" ImageSource="Images/Gears.jpg"/>

    <Style x:Key="MainBackground" TargetType="Page">
        <Setter Property="Background" Value="{StaticResource BackgroundBase}"/>
    </Style>

    <Style x:Key="stackElement" TargetType="ListBoxItem">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
